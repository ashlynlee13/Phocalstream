<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Phocalstream - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
</head>
<body>
    <div id="container">
        <div id="head">
            <div style="position: relative; top: -15px;">
                <a href="~/"><img src="~/Content/Images/Phocalstream.png" /></a>
                <h1>Phocalstream</h1>
                <div style="clear: left;"></div>
            </div>
            <div style="position: absolute; bottom: 200px; left: 50px;">
                    @using (@Html.BeginForm("Login", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset id="socialLoginList">
                        <legend>Log in using another service</legend>
                        <p>
                        <button type="submit" name="provider" value="Login" title="Log in using your Google account">Login</button>
                        </p>
                        </fieldset>
                    }
                   
                </div>
        </div>
        <div>
            @RenderBody()
        </div>
     </div>
</body>
</html>