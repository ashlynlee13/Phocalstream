<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Phocalstream - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <script src="@Url.Content("~/Content/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
</head>
<body>
    <div id="stage">
        <div id="head">
            <div style="position: relative; top: -15px;">
                <a href="~/"><img class="logo" src="~/Content/Images/Phocalstream.png" /></a>
                <h1>Phocalstream</h1>
                <div style="clear: left;"></div>
            </div>
            <div style="position: absolute; top: 10px; right: 20px; background-color: #efefef; padding: 2px; border: 1px solid #808080">
               @Html.Partial("_MenuBarPartial")
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
     </div>
</body>
</html>