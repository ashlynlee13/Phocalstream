@model Phocalstream_Web.Models.ViewModels.PhotoViewModel
@{
    ViewBag.Title = Model.Photo.Site.Name + " Photo";
}

    @section Styles
    {
        <style type="text/css">
            #silverlightControlHost {
	            height: 100%;
	            text-align:center;
            }

            table h1 {
                font-weight: 100;            
                font-size: 30pt;
                margin-bottom: 0px;
                padding-bottom: 0px;
                line-height: 0px;
            }

            table h3 {
                font-weight: 300;
                font-size: 16pt;
                margin-bottom: 0px;
                padding-bottom: 0px;
            }

            .value {
                font-size: 10pt;
                padding-left: 5px;
            }

            li {
                font-size: 12pt;
            }

            ul {
                margin-top: 20pt;
                list-style: none;
                margin-left: 0px;
                padding-left: 30px;
            }

            #map {
                margin-top: 30px;
                width: 250px;
            }
    </style>
    }

    @section Scripts 
    {
            <script type="text/javascript" src="/Content/Scripts/Silverlight.js"></script>
            <script type="text/javascript" src="/Content/Scripts/ClientBin.js"></script>
            <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
            <script charset="UTF-8" type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>

            <script type="text/javascript">
                function fullScreen() {
                    $("#silverlightControlHost").css({ position: "absolute" });
                    $("#silverlightControlHost").animate({
                        top: "0px",
                        left: "0px",
                        width: "100%",
                        height: "98%"
                    }, 500, function () { $("#exit").show(); });
                }

                function exitFull() {
                    $("#silverlightControlHost").animate({
                        top: "0px",
                        left: "0px",
                        width: "650px",
                        height: "488px"
                    }, 500, function () {
                        $("#exit").hide();
                    });
                    $("#silverlightControlHost").css({ position: "static" });
                }
            </script>

        }
<form id="form1" runat="server">
    <table>
        <tr>
            <td>
                <div id="silverlightControlHost" style="width: 650px; height: 488px;">
                <object data="data:application/x-silverlight-2," type="application/x-silverlight-2" width="100%" height="99%">
		            <param name="source" value="/ClientBin/Phocalstream_PivotView.xap"/>
		            <param name="onError" value="onSilverlightError" />
		            <param name="background" value="white" />
		            <param name="minRuntimeVersion" value="5.0.61118.0" />
		            <param name="autoUpgrade" value="true" />
                    <param name="initParams" value="photo=@Html.DisplayFor(model => model.ImageUrl)" />
		            <a href="http://go.microsoft.com/fwlink/?LinkID=149156&v=5.0.61118.0" style="text-decoration:none">
 			            <img src="http://go.microsoft.com/fwlink/?LinkId=161376" alt="Get Microsoft Silverlight" style="border-style:none"/>
		            </a>
	            </object><a id="exit" style="display: none;" href="javascript:exitFull()">Exit Fullscreen</a><iframe id="_sl_historyFrame" style="visibility:hidden;height:0px;width:0px;border:0px"></iframe>
                </div>
            </td>
            <td style="vertical-align: top; padding-left: 20px;">
                <div style="width: 250px;">
                    <h1>@Html.DisplayFor(model => model.PhotoTime)</h1>
                    <h3>@Html.DisplayFor(model => model.PhotoDate)</h3>
                    <ul>
                        <li style="padding-bottom: 20px;">Camera Site: <span class="value">@Html.DisplayFor(model => model.Photo.Site.Name)</span></li>
                        <li>Exposure Time: <span class="value">@Html.DisplayFor(model => model.Photo.ExposureTime)</span></li>
                        <li>
                            @(Model.Photo.Flash ? "Flash" : "No Flash")

                        </li>
                        <li>Focal Length: <span class="value">@Html.DisplayFor(model => model.Photo.FocalLength)</span></li>
                        <li>ISO Speed: <span class="value">@Html.DisplayFor(model => model.Photo.ISO)</span></li>
                        <li>Max Aperture: <span class="value">@Html.DisplayFor(model => model.Photo.MaxAperture)</span></li>
                        <li>Shutter Speed: <span class="value">@Html.DisplayFor(model => model.Photo.ShutterSpeed)</span></li>
                    </ul>
                    <div style="margin-top: 20px;">
                    <a href="javascript:fullScreen()">View Fullscreen</a>
                    </div>

                </div>
            </td>
        </tr>

    </table>
</form>